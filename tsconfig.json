{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    //"lib": ["ESNext", "DOM", "es6", "es2017", "esnext.asynciterable"],
    "lib": ["ES6", "DOM"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "exclude": ["dist", "tests", "node_modules", "**/*.test.ts", "jest.config.ts"]
}
